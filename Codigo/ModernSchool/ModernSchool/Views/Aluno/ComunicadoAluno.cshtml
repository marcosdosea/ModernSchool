@model Core.DTO.AlunoComunicacaoIndexDTO

<h6>Comunicado</h6>

<label>Turma: @Model.NomeTurma</label>

<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Professor
            </th>
            <th>
                Componente
            </th>
            <th>
               Data
            </th>
            <th>
                Mensagem
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < @Model.Comunicados.Count(); i++)
        {
            <tr>
                <td>
                    @Model.Comunicados[i].NomeRemetente
                </td>
                <td>
                    @Model.Comunicados[i].NomeComponente
                </td>
                <td>
                    @Model.Comunicados[i].Data.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Model.Comunicados[i].Menssagem
                </td>

            </tr>
        }
    </tbody>
</table>
