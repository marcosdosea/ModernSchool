@model ModernSchoolWEB.Models.ComponenteViewModel

@{
    ViewData["Title"] = "Create";
}
<partial name="_Notificar">
<h4>Criar Componente</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="id" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="d-flex flex-wrap py-4">
                <div class="col-lg">
                    <a class="btn bg-secondary text-white border border-0 col" asp-action="Index"> Voltar </a>
                </div>
                <div class="col-lg">
                    <input type="submit" value="Adicionar" class="btn cor-bg col text-light" />
                </div>
            </div>
        </form>
    </div>
</div>

