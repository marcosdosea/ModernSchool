@model IEnumerable<ModernSchoolWEB.Models.GradeHorarioDTOModel>

<label class="fs-5">Diários de Classes</label>
<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Componente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <input type="hidden" asp-for="@item.Id" />
                <td>
                    @Html.DisplayFor(modelItem => item.Componente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraFim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Professor)
                </td>
                <td>
                    <div class="d-flex">
                        <div>
                            <a role="button" asp-action="Edit" class="fs-5" asp-route-Id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                        </div>
                        <div>
                            <form asp-action="Delete"
                                  asp-route-Id="@item.Id">
                                <button type="submit" class="border-0 fs-5 bg-transparent pl-5" role="button">
                                    <i class="fa-solid text-danger fa-trash-can"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="container py-4">
    <div class="row">
        <div class="d-flex justify-content-end col-lg align-items-center">
            <a class="btn bg-secondary text-white border border-0 d-grid gap-2 col-3" asp-controller="Turma" asp-action="Index"> Voltar </a>
        </div>
        <div class="d-flex justify-content-end col-lg-2">
            <a class="display-4" role="button" asp-action="Create"><i class="fa-sharp fa-solid fa-circle-plus"></i></a>
        </div>
    </div>
</div>
