@model ModernSchoolWEB.Models.PeriodoViewModel

@{
    ViewData["Title"] = "Create";
}
<partial name="_Notificar">
<h4>Criar Período</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" id="periodo" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoLetivo" class="control-label"></label>
                <select asp-for="AnoLetivo" asp-items="@Model.listaAnoLetivo" class="form-select"></select>
                <span asp-validation-for="AnoLetivo" class="text-danger"></span>
            </div>
            <div class="d-flex flex-wrap py-4">
                <div class="col-lg">
                    <a class="btn bg-secondary text-white border border-0 col" asp-action="Index"> Voltar </a>
                </div>
                <div class="col-lg">
                    <input type="submit" value="Adicionar" class="btn cor-bg col text-light" />
                </div>
            </div>
        </form>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-mask/jquery.inputmask.js"></script>
<script>
    $(document).ready(function () {
        $('#periodo').inputmask('9º');
    });
</script>

