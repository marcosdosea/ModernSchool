@model ModernSchoolWEB.Models.ComunicarProfessorTurmaViewModel
<partial name="_Notificar">
<h3>Comunicado</h3>
<label>Turma: @Model.Turma Componente: @Model.Componente</label>

<form asp-action="ComunicacaoProfessorTurma" method="post">
    <input asp-for="IdTurma" type="hidden" />
    <input asp-for="IdComponente" type="hidden" />
    <table class="table table-sm table-striped table-bordered">
        <thead>
            <tr>
                <th>N°</th>
                <th>
                    Matricula
                </th>
                <th>
                    Nome
                </th>
                <th>
                    <input id="checkAll" type="checkbox" /> Todos
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Alunos.Count(); i++)
            {
                <tr>
                    <td>
                        @(i + 1)
                    </td>
                    <td>
                        @Model.Alunos[i].IdAluno
                        <input asp-for="@Model.Alunos[i].IdAluno" value="@Model.Alunos[i].IdAluno" type="hidden" />
                    </td>
                    <td>
                        @Model.Alunos[i].NomeAluno
                    </td>
                    <td>
                        <input class="checkboxEnviar" type="checkbox" asp-for="@Model.Alunos[i].Enviar" value="True" />
                    </td>
                </tr>
            }
            <div class="mb-3">
                <label asp-for="Menssagem" class="form-label">Mensagem</label>
                <textarea class="form-control" asp-for="Menssagem" rows="3" cols="5"></textarea>
                <span asp-validation-for="Menssagem" class="text-danger"></span>
            </div>
        </tbody>
    </table>
    <div class="d-flex justify-content-end py-5">
        <div class="col-3 pr-2">
            <a class="btn bg-secondary text-white border border-0 d-grid gap-2 col" asp-controller="Professor" asp-action="DiarioDeClasse" asp-route-idTurma="@Model.IdTurma"
               asp-route-idComponente="@Model.IdComponente"> Voltar </a>
        </div>
        <div class="form-group col-3">
            <input class="btn cor-bg d-grid gap-2 col text-white border border-0" type="submit" value="Enviar" />
        </div>
    </div>
</form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#checkAll').change(function () {
            $('.checkboxEnviar').prop('checked', $(this).prop('checked'));
        });
    });
</script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
