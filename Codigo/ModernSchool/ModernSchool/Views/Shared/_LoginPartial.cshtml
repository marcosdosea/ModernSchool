@using Microsoft.AspNetCore.Identity
@using ModernSchoolWEB.Areas.Identity.Data

@inject SignInManager<UsuarioIdentity> SignInManager
@inject UserManager<UsuarioIdentity> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <span class="br-item text-uppercase text-bold text-white text-opacity-50"><i class="fa-solid fa-circle-user"></i>
                @User.FindFirst("UserName")?.Value : @(Convert.ToString(User.FindFirst("UserRole")?.Value.ToLower()) == "responsavel" ? "responsável".ToUpper() : User.FindFirst("UserRole")?.Value.ToUpper())
                </span>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="br-item text-uppercase text-bold text-white text-opacity-75"><i class="fa-solid fa-circle-arrow-left"></i> Sair</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="br-item text-uppercase text-bold text-white text-opacity-75" id="register" asp-area="Identity" asp-page="/Account/Register"><i class="fa-solid fa-circle-user"></i> Cadastre-se</a>
    </li>
    <li class="nav-item">
            <a class="br-item text-uppercase text-bold text-white text-opacity-75" id="login" asp-area="Identity" asp-page="/Account/Login"><i class="fa-solid fa-square-caret-right"></i> Entrar</a>
    </li>
}
</ul>
