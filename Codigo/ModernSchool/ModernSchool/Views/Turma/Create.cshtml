@model ModernSchoolWEB.Models.TurmaViewModel

<h4>@Model.NomeEscola</h4>
<h4>Criar Componente</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AnoLetivo1" class="control-label"></label>
                <select asp-for="AnoLetivo1" class="form-select" asp-items="@Model.ListaAnoLetivo"></select>
                <span asp-validation-for="AnoLetivo1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Turma1" class="control-label"></label>
                <input asp-for="Turma1" class="form-control" />
                <span asp-validation-for="Turma1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vagas" class="control-label"></label>
                <input asp-for="Vagas" class="form-control" />
                <span asp-validation-for="Vagas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sala" class="control-label"></label>
                <input asp-for="Sala" class="form-control" />
                <span asp-validation-for="Sala" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Escolaridade" class="control-label"></label>
                <select asp-for="Escolaridade" class="form-select">
                    <option value="I">Infantil</option>
                    <option value="F">Fundamental</option>
                </select>
                <span asp-validation-for="Escolaridade" class="text-danger"></span>
            </div>
            <div class="d-flex flex-wrap py-4">
                <div class="col-lg">
                    <a class="btn bg-secondary text-white border border-0 col" asp-action="Index"> Voltar </a>
                </div>
                <div class="col-lg">
                    <input type="submit" value="Adicionar" class="btn cor-bg col text-light" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
